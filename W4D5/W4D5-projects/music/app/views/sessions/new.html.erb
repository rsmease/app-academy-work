<% unless flash.now[:errors].nil? %>
  <% flash.now[:errors].each do |error| %>
      <h2><%= error %></h2>
  <% end %>
  <img src="https://media.giphy.com/media/SISMwEp1wht84/giphy.gif" alt="">
<% end %>

<form class="login" action="<%=  session_url %>" method="post">
  <!-- <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"> -->
  <%= token_tag nil %>
  <label for="email">Email</label>
  <input class="enter-input" id="email" type="text" name="user[email]" value="">
  <label for="password">Password</label>
  <input class="enter-input" id="password" type="password" name="user[password]" value="">
  <input class="submit-input" type="submit" value="Log In">
</form>
